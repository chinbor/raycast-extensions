{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "search-anpm",
  "title": "Search anpm Packages",
  "description": "Search for anpm package information",
  "icon": "anpm-icon.png",
  "author": "chinbor_mn",
  "license": "MIT",
  "categories": [
    "Developer Tools"
  ],
  "commands": [
    {
      "name": "search",
      "title": "Search Packages",
      "subtitle": "anpm",
      "description": "Search for anpm package information",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "showLinkToSearchResultsInListView",
      "type": "checkbox",
      "label": "Show link in list view",
      "title": "Show link to npmjs.com results in list view",
      "description": "Show link to npmjs.com search results in list view",
      "required": false,
      "value": true,
      "default": true
    },
    {
      "name": "defaultOpenAction",
      "type": "dropdown",
      "data": [
        {
          "title": "Open Repository",
          "value": "openRepository"
        },
        {
          "title": "Open Homepage",
          "value": "openHomepage"
        },
        {
          "title": "anpm Package Page",
          "value": "anpmPackagePage"
        }
      ],
      "title": "Default Open Action",
      "description": "How to open the selected package when Enter is pressed",
      "required": false,
      "default": "openRepository",
      "value": "openRepository"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0",
    "@raycast/utils": "^1.14.0",
    "dedupe": "^4.0.3",
    "gitlab-url-parse": "^1.0.0",
    "parse-github-url": "^1.0.2",
    "tiny-relative-date": "^1.3.0",
    "use-debounce": "^10.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/parse-github-url": "^1.0.3",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
